<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context=".layout.TimeBasedNotificationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Event"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/EventTextViewTime" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_name_timebased"
        android:hint="Event Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_location_timebased"
        android:hint="Event Location" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/event_description_timebased"
        android:gravity="bottom|left"
        android:hint="Event Description (optional)" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/timeTextView"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="180dp"
            android:text="Choose Date"
            android:id="@+id/choose_date_button"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="180dp"
            android:text="Choose Time"
            android:id="@+id/choose_time_button"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:text="Date: Not Chosen"
            android:ems="10"
            android:id="@+id/dateText"
            android:textSize="9sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            android:text="Time: Not Chosen"
            android:ems="10"
            android:id="@+id/timeText"
            android:textSize="9sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button_time_based_notif"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
