<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="75"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView android:id="@+id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="22dp"
            android:text="Task_Name"
            android:textColor="#000000"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:paddingTop="5dp">
        </TextView>

        <TextView
            android:id="@+id/task_location"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Task_Location"
            android:textSize="18dp"
            android:textColor="#000000"
            android:paddingBottom="5dp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/task_latitude"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Task_Latitude"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="#000000"
            android:paddingBottom="5dp"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/task_longitude"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Task_Longitude"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="#000000"
            android:paddingBottom="5dp"
            android:layout_gravity="right">
        </TextView>

    </LinearLayout>

</LinearLayout>